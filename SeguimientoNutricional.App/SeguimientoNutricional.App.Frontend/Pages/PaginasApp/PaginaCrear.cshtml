@page
@model SeguimientoNutricional.App.Frontend.Pages.PaginasApp.PaginaCrearModel
@{
}

<h1>CREAR PACIENTE</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Paciente.Nombre">Ingrese Nombre:</label>
        <input type="text" asp-for="Paciente.Nombre" class="form-control">
        <span class="text-danger" asp-validation-for="Paciente.Nombre"></span>
    </div>

    <div class="form-group">
        <label asp-for="Paciente.Apellido">Ingrese Apellido:</label>
        <input type="text" asp-for="Paciente.Apellido" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Paciente.Telefono">Ingrese Numero Telefono</label>
        <input type="text" asp-for="Paciente.Telefono" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Paciente.Genero">Ingrese Genero</label>
        <input type="text" asp-for="Paciente.Genero" class="form-control">
    </div>

    <button type="submit" class="btn btn-primary">Crear Paciente</button>
</form>